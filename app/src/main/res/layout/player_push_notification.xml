<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/push_layout"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="#333333">
    <ImageView
        android:src="@drawable/no_album_art"
        tools:ignore="ContentDescription"
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_gravity="center_vertical"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_toEndOf="@+id/image"
        android:layout_toStartOf="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/push_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/push_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/button_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
    <Button
        android:id="@+id/push_previous"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end|center"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:background="@drawable/ic_media_previous_mini"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/push_pause"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end|center"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        android:background="@drawable/ic_media_pause_mini"
        android:layout_marginEnd="20dp" />
    <Button
        android:id="@+id/push_play"
        style="?android:attr/buttonBarButtonStyle"
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end|center"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_media_play_mini" />

        <Button
            android:id="@+id/push_next"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_media_next_mini"
            android:focusable="true"
            android:focusableInTouchMode="false" />
        <Button
            android:id="@+id/push_delete"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end|center"
            android:background="@drawable/ic_close"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:layout_marginEnd="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"/>
    </LinearLayout>
</RelativeLayout>
